{
  "name": "scrypt-cli",
  "version": "0.1.8",
  "description": "CLI tool for creating and managing sCrypt projects.",
  "bin": {
    "scrypt": "./src/bin/index.js",
    "scrypt-cli": "./src/bin/index.js"
  },
  "scripts": {
    "coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "format": "prettier --write --ignore-unknown **/*",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --silent",
    "testw": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch --silent",
    "test-templates": "sh test-templates.sh",
    "prepare": "husky install"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "enquirer": "^2.3.6",
    "envinfo": "^7.8.1",
    "fast-glob": "^3.2.11",
    "find-npm-prefix": "^1.0.2",
    "fs-extra": "^10.1.0",
    "gittar": "^0.1.1",
    "json5": "^2.2.2",
    "ora": "^5.4.1",
    "scryptlib": "^2.1.1",
    "shelljs": "^0.8.5",
    "table": "^6.8.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "husky": "^8.0.3",
    "jest": "^27.2.1",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sCrypt-Inc/scrypt-cli.git"
  },
  "keywords": [
    "scrypt",
    "cli",
    "bitcoin",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sCrypt-Inc/scrypt-cli/issues"
  },
  "homepage": "https://github.com/sCrypt-Inc/scrypt-cli#readme"
}
