{
  "name": "package-name",
  "version": "0.1.0",
  "description": "A demo sCrypt stateful smart contract.",
  "author": "",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf scrypt.index.json && rimraf dist && rimraf scrypts",
    "pretest": "npm run build",
    "precitest": "npm run build && npm run ci",
    "citest": "mocha 'dist/tests/**/*.test.js' --timeout 1200000",
    "test": "mocha 'dist/tests/**/*.test.js' --timeout 1200000",
    "testnet": "npm run build && mocha 'dist/tests/testnet/**/*.js' --timeout 1200000",
    "genprivkey": "npm run build && node 'dist/tests/testnet/util/privateKey.js'",
    "lint": "eslint . --ext .js,.ts --fix && prettier --write --ignore-unknown \"**/*\"",
    "lint-check": "eslint . --ext .js,.ts && prettier --check --ignore-unknown \"**/*\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.{ts,js}": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "scrypt-ts": "=0.1.5-beta.16",
    "dotenv": "^16.0.3",
    "axios": "^1.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.10",
    "chai": "^4.3.6",
    "mocha": "^10.1.0",
    "rimraf": "^3.0.2",
    "typescript": "=4.8.4",
    "prettier": "^2.8.2",
    "eslint": "^8.31.0",
    "@typescript-eslint/parser": "^5.48.1",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0"
  },
  "license": "MIT"
}
